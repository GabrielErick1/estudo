{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Exemplo",
    "description": "API para gerenciamento de cursos e especializações",
    "contact": {
      "name": "API Support",
      "url": "http://www.example.com/support",
      "email": "support@example.com"
    },
    "version": "1.0.0"
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/session": {
      "post": {
        "tags": ["session"],
        "summary": "Autenticar usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "usuario123"
                  },
                  "email": {
                    "type": "string",
                    "example": "usuario@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "senha123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Autenticação bem-sucedida",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VySWQiOiIxMjM0NTY3ODkwIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Credenciais inválidas"
          }
        }
      }
    },
    "/category": {
      "post": {
        "tags": ["category"],
        "summary": "Criar curso",
        "description": "Cria um curso específico",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "node"
                  },
                  "description": {
                    "type": "string",
                    "example": "node é bom demais"
                  }
                },
                "required": ["name", "description"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Detalhes do curso criado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    }
                  },
                  "required": ["name", "description"]
                }
              }
            }
          },
          "500": {
            "description": "Servidor caiu"
          }
        }
      },
      "get": {
        "tags": ["category"],
        "summary": "Obter curso",
        "description": "Retorna os detalhes de um curso específico",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Detalhes do curso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    },
                    "required": ["name", "description"]
                  }
                }
              }
            }
          },
          "500": {
            "description": "Servidor caiu"
          }
        }
      }
    },
    "/category/import": {
      "post": {
        "tags": ["category"],
        "summary": "Upload das categorias",
        "description": "Upload das categorias",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": ["file"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Detalhes do upload realizado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Upload realizado com sucesso"
                    }
                  },
                  "required": ["message"]
                }
              }
            }
          },
          "500": {
            "description": "Servidor caiu"
          }
        }
      }
    },
    "/especi": {
      "post": {
        "tags": ["especializacao"],
        "summary": "Criar especialização",
        "description": "Cria uma especialização específica",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "backend"
                  },
                  "description": {
                    "type": "string",
                    "example": "especialização em desenvolvimento backend"
                  }
                },
                "required": ["name", "description"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Detalhes da especialização criada",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    }
                  },
                  "required": ["name", "description"]
                }
              }
            }
          },
          "500": {
            "description": "Servidor caiu"
          }
        }
      },
      "get": {
        "tags": ["especializacao"],
        "summary": "Obter especializações",
        "description": "Retorna os detalhes de todas as especializações",
        "responses": {
          "200": {
            "description": "Detalhes das especializações",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    },
                    "required": ["name", "description"]
                  }
                }
              }
            }
          },
          "500": {
            "description": "Servidor caiu"
          }
        }
      }
    },
    "/users": {
      "post": {
        "tags": ["users"],
        "summary": "Criar usuário",
        "description": "Cria um novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "usuario@example.com"
                  },
                  "name": {
                    "type": "string",
                    "example": "Usuário Exemplo"
                  },
                  "username": {
                    "type": "string",
                    "example": "usuario123"
                  },
                  "password": {
                    "type": "string",
                    "example": "senha123"
                  },
                  "driver_license": {
                    "type": "string",
                    "example": "123456789"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    },
                    "username": {
                      "type": "string"
                    },
                    "driver_license": {
                      "type": "string"
                    }
                  },
                  "required": ["email", "password", "name", "username", "avatar", "driver_license"]
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      },
      "get": {
        "tags": ["users"],
        "summary": "Listar usuários",
        "description": "Retorna uma lista de todos os usuários",
        "responses": {
          "200": {
            "description": "Lista de usuários",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "email": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "password": {
                        "type": "string"
                      },
                      "username": {
                        "type": "string"
                      },
                      "driver_license": {
                        "type": "string"
                      }
                    },
                    "required": ["email", "password", "name", "username", "avatar", "driver_license"]
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    },
    "/users/avatar": {
      "patch": {
        "tags": ["users"],
        "summary": "Atualizar avatar do usuário",
        "description": "Atualiza o campo avatar de um usuário",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VySWQiOiJiMzdiMWFkOC1mMTBiLTQzOGYtOWIzZS05YWEyY2QzNjIzNzIiLCJpYXQiOjE3MjEyNjU0NjEsImV4cCI6MTcyMTM1MTg2MX0.ec3mNMS4FMsT07bYrUbQjdYxNPaZSDV4kFKVxkurMgk"
                  },
                  "avatar": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": ["id", "avatar"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Avatar atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Avatar atualizado com sucesso"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Requisição inválida"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    }
  }
}
