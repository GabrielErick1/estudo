generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  email      String    @unique
  name       String
  password   String
  created_at DateTime  @default(now())
  CheckIn    CheckIn[]

  @@map("users")
}

model Gym {
  id          String    @id @default(uuid())
  name        String    @unique
  title       String
  description String?
  telephone   String?
  location    String
  latitude    Decimal
  longitude   Decimal
  CheckIn     CheckIn[]

  @@map("gym")
}

model CheckIn {
  id           String   @id @default(uuid())
  created_at   DateTime @default(now())
  checkIn_time DateTime @default(now())
  user         User     @relation(fields: [user_id], references: [id])
  gym          Gym      @relation(fields: [gym_id], references: [id])
  user_id      String
  gym_id       String

  @@map("check_ins")
}
